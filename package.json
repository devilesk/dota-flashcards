{
  "name": "dota-flashcards",
  "version": "0.4.1",
  "description": "Dota 2 Flashcards App",
  "main": "src/main.js",
  "scripts": {
    "browserify": "browserify src/main.js -u jquery -u knockout > www/bundle.js",
    "uglify": "uglifyjs --compress drop_console --mangle -- www/bundle.js > build/bundle.min.js",
    "clean:build": "rm -rf build/*",
    "copy:html": "cp www/*.html build/",
    "copy": "npm run copy:html",
    "replace:html": "replace 'bundle.js' 'bundle.min.js' build/index.html",
    "replace:css": "replace 'app.css' 'app.min.css' build/index.html && replace '<link rel=\"stylesheet\" href=\"slider.css\">' '' build/index.html",
    "replace": "npm run replace:html && npm run replace:css",
    "build:css": "cleancss -o build/app.min.css www/slider.css www/app.css",
    "build:js": "npm run browserify && npm run uglify",
    "build": "npm run clean:build && npm run build:js && npm run copy && npm run replace && npm run build:css",
    "test": "echo \"Error: no test specified\" && exit 1",
    "stage:rev": "node scripts/rev.js",
    "stage": "npm run build && npm run stage:rev",
    "deploy:copy": "node scripts/deploy.js",
    "deploy": "npm run stage && npm run deploy:copy",
    "watch": "watch 'npm run browserify' src"
  },
  "author": "devilesk <devilesk@gmail.com> (http://devilesk.com)",
  "license": "ISC",
  "devDependencies": {
    "bit-array-js": "^0.1.1",
    "browserify": "^13.1.1",
    "browserify-shim": "^3.8.12",
    "clean-css": "^3.4.21",
    "dota-hero-calculator-library": "^0.7.0",
    "hammerjs": "^2.0.8",
    "jquery": "^3.1.1",
    "knockout": "^3.4.1",
    "lodash": "^4.17.2",
    "replace": "^0.3.0",
    "rev-hash": "^1.0.0",
    "uglify-js": "^2.7.5",
    "urijs": "^1.18.4",
    "watch": "^1.0.1"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "knockout": "global:ko",
    "jquery": "global:$"
  },
  "dependencies": {},
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devilesk/dota-flashcards.git"
  },
  "bugs": {
    "url": "https://github.com/devilesk/dota-flashcards/issues"
  },
  "homepage": "https://github.com/devilesk/dota-flashcards#readme"
}
